datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  fullName  String
  username  String   @unique
  email     String   @unique
  password  String
  role      String   @default("student")
  createdAt DateTime @default(now())
}

